<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".activities.IdDetails">
  <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="50dp">
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      app:layout_constraintTop_toTopOf="parent"
      tools:layout_editor_absoluteX="20dp"
      android:padding="20dp">
      <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Parte Posterior"
        android:layout_marginBottom="10dp"
        style="@style/title3"/>
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@drawable/custom_gray_dotted_container"
        android:padding="20dp"
        android:layout_marginBottom="20dp">
        <ImageView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:src="@drawable/material" />
      </LinearLayout>
      <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Parte Trasera"
        android:layout_marginBottom="10dp"
        style="@style/title3"/>
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@drawable/custom_gray_dotted_container"
        android:padding="20dp"
        android:layout_marginBottom="20dp">
        <ImageView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:src="@drawable/material" />
      </LinearLayout>
      <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Detalles de Usuario"
        android:layout_marginBottom="10dp"
        style="@style/title3"/>
      <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">
        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:padding="20dp"
          android:orientation="vertical">
          <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre: Usuario Test 1"
            style="@style/title2"/>
          <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CURP: WAIASDOPE"
            style="@style/subtitle1"/>
          <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fecha: 25/08/2022"
            style="@style/body1"/>
          <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hora: 05:12:20"
            style="@style/body1"/>
          <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Perfil: Usuario Nuevo"
            style="@style/body1"/>
        </LinearLayout>
      </androidx.cardview.widget.CardView>
    </LinearLayout>
  </ScrollView>
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintBottom_toBottomOf="parent"
    android:padding="20dp">
    <Button
      android:id="@+id/btn_get_back_from_id_details"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Regresar" />
  </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>